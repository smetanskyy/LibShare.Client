@page "/books"
@inject NavigationManager navigationManager
<Spinner @ref="LoadSpinner" />
<section class="hero-wrap hero-wrap-2" style="background-image:url(images/bg_5.jpg)" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate mb-0 text-center">
                <p class="breadcrumbs mb-0"><span class="mr-2"><a href="/index">Головна <i class="fa fa-chevron-right"></i></a></span> <span>Книжкова клажа <i class="fa fa-chevron-right"></i></span></p>
                <h1 class="mb-0 bread">Книжкова клажа</h1>
            </div>
        </div>
    </div>
</section>

@if (BooksList != null)
{
    <section class="ftco-section ftco-degree-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-9">
                    <div class="row">
                        <GenericList List="@BooksList">
                            <ElementTemplate>
                                <BookElLong BookItem="context"></BookElLong>
                            </ElementTemplate>
                        </GenericList>
                    </div>
                    <Pagination CurrentPage="PageNumber" TotalAmountPages="TotalAmountPages" SelectedPage="SelectedPage" />
                </div>
                <div class="col-lg-3 sidebar pl-lg-3">
                    <div class="sidebar-box">
                        <form action="#" class="search-form">
                            <div class="form-group">
                                <span class="fa fa-search"></span>
                                <input type="text" class="form-control" placeholder="Пошук ">
                            </div>
                        </form>
                    </div>
                    <div class="sidebar-box">
                        <div class="categories">
                            <h3>Категорії</h3>
                            @if (Categories != null)
                            {
                                <ul>
                                    @foreach (var item in Categories)
                                    {
                                        <li><a href="@SetCategoryRefer(item.Id)">@item.Name <span class="fa fa-chevron-right"></span></a></li>
                                    }
                                </ul>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
