@page "/login"
@implements IDisposable

<Spinner @ref="LoadSpinner" />
<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="wrapper px-md-4">
                <div class="row no-gutters">
                    <div class="contact-wrap w-100 p-md-5 p-4">
                        <h3 class="mb-4">Увійти в акаунт</h3>
                        <EditForm @oninput="@ClearErrorMessage" method="POST" id="loginForm" name="loginForm" class="contactForm"
                                  Model="@Model" OnValidSubmit="OnSubmitHandle">
                            <FluentValidationValidator />
                            <text class="text-danger">@ErrorMessage</text>
                            <div class="row">
                                <div class="col-md-10">
                                    <div class="form-group">
                                        <label class="label" for="email">Email: </label>
                                        <InputText type="email" class="form-control" name="email" id="email" placeholder="Email"
                                                   @bind-Value="Model.Email" />
                                        <ValidationMessage class="text-danger" For="@(() => Model.Email)" />
                                    </div>
                                </div>
                                <div class="col-md-10">
                                    <div class="form-group">
                                        <label class="label" for="password">Пароль: </label>
                                        <InputText type="password" class="form-control" name="password" id="password" placeholder="Пароль"
                                                   @bind-Value="Model.Password" />
                                        <ValidationMessage class="text-danger" For="@(() => Model.Password)" />
                                    </div>
                                </div>
                                <div class="col-md-10">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary"> Увійти </button>
                                        <div class="submitting"></div>
                                    </div>
                                </div>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>