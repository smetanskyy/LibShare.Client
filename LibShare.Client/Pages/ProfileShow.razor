@page "/profile"
@implements IDisposable
<Spinner @ref="LoadSpinner" />
<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="wrapper px-md-4">
                <div class="row no-gutters">
                    <div class="contact-wrap w-100 p-md-5 p-4">
                        <h3 class="mb-4">Зміна профілю</h3>
                        <EditForm @oninput="@ClearErrorMessage" method="POST" class="contactForm"
                                  Model="@Model" OnValidSubmit="OnSubmitHandle">
                            <FluentValidationValidator />

                            <text class="text-danger">@ErrorMessage</text>

                            <div class="row">

                                <div>
                                    <img src="https://img.icons8.com/bubbles/100/000000/administrator-male.png"
                                         class="img-lg rounded-circle mb-4" alt="profile image">
                                    <h4>Sam Disanjo</h4>
                                    <p class="text-muted mb-0">Social Activist</p>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="label" for="name">Ім'я: </label>
                                        <InputText class="form-control"
                                                   name="name" id="name" placeholder="@Model.Name"
                                                   @bind-Value="Model.Name" />
                                        <ValidationMessage For="@(() => Model.Name)" />
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="label" for="name">Прізвище: </label>
                                        <InputText class="form-control"
                                                   name="surname" id="surname" placeholder="@Model.Surname"
                                                   @bind-Value="Model.Surname" />
                                        <ValidationMessage For="@(() => Model.Surname)" />
                                    </div>
                                </div>


                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="label" for="email">Email: </label>
                                        <InputText type="email" class="form-control"
                                                   name="email" id="email" placeholder="Email"
                                                   @bind-Value="Model.Email" />
                                        <ValidationMessage For="@(() => Model.Email)" />
                                    </div>
                                </div>


                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="label" for="">Телефон: </label>
                                        <input type="tel" class="form-control"
                                               name="phone" id="phone" placeholder="@Model.Phone"
                                               @bind="@Model.Phone" />
                                        <ValidationMessage For="@(() => Model.Phone)" />
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="label" for="">Дата народження: </label>
                                        <InputDate class="form-control" @bind-Value="Model.DateOfBirth" name="DateOfBirth" id="DateOfBirth" />
                                        <ValidationMessage For="@(() => Model.DateOfBirth)" />
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary"> Оновити </button>
                                        <div class="submitting"></div>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <button type="button" class="btn btn-secondary">  </button>
                                    </div>
                                </div>


                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>