<div aria-live="polite" aria-atomic="true" style="position: absolute; top: 100px; right: 0; min-height: 200px;">
    <div class="toast bg-light" style="position: absolute; top: 0; right: 0; min-width: 250px; z-index: 1500" data-delay="10000">
        <div class="toast-header">
            <div class="rounded mr-2 @(IsSuccess? "bg-success" : "bg-danger")" style="height: 15px; width: 15px;"></div>
            <strong class="mr-auto">
                @if (Header == null)
                {
                    <text>Сповіщення!</text>
                }
                else
                {
                    @Header
                }
            </strong>
            <small>@Time.ToShortTimeString()</small>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            @if (Body == null)
            {
                <text>Операція пройшла успішно!</text>
            }
            else
            {
                @Body
            }
        </div>
    </div>
</div>